<Window x:Class="ChecksumCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChecksumCalculator"
        mc:Ignorable="d"
        Title="Checksum Calculator" MinHeight="450" MinWidth="800"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel Background="#0F2C57">
        <StackPanel DockPanel.Dock="Top" Margin="10">
            <Button Height="30" Content="Add File" Command="{Binding AddFileCommand}" Margin="0" />
        </StackPanel>
        <ListView BorderThickness="0" Background="#0F2C57" ItemsSource="{Binding FileItems}" Margin="10,0,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File Name" DisplayMemberBinding="{Binding FileName}" Width="300" />
                    <GridViewColumn Header="Checksum" DisplayMemberBinding="{Binding Checksum}" Width="200" />
                    <GridViewColumn Header="Result" DisplayMemberBinding="{Binding Result}" Width="230" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>